<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    android:orientation="vertical"
    tools:context=".ChildMainActivity">

    <ImageView
        android:id="@+id/img_home"
        android:layout_width="340dp"
        android:layout_height="160dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/mainhome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_profile"
        android:layout_width="205dp"
        android:layout_height="205dp"
        android:layout_marginTop="56dp"
        android:src="@drawable/myprofilebtn"
        app:layout_constraintEnd_toStartOf="@+id/btn_snaptalk"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_home"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/btn_friendlist"
        android:layout_width="205dp"
        android:layout_height="205dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="1dp"
        android:src="@drawable/friendlist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_profile"
        app:layout_constraintTop_toBottomOf="@+id/img_home" />

    <ImageButton
        android:id="@+id/btn_snaptalk"
        android:layout_width="410dp"
        android:layout_height="205dp"
        android:src="@drawable/snaptalk_l"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="441dp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>