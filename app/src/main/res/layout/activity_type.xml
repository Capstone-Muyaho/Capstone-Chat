<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|bottom"
    android:weightSum="2"
    tools:context=".ChooseTypeActivity">

    <ImageView
        android:id="@+id/img_grandma"
        android:layout_width="200dp"
        android:layout_height="370dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="@drawable/buttonline"
        android:scaleType="fitCenter"
        android:src="@drawable/grandma" />

    <ImageView
        android:id="@+id/img_son"
        android:layout_width="220dp"
        android:layout_height="370dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/img_grandma"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="@drawable/buttonline"
        android:scaleType="fitCenter"
        android:src="@drawable/father" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="390dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <RadioButton
            android:id="@+id/btn_grandma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="부모"
            android:textColor="#0000ff"
            android:textSize="40sp" />

        <RadioButton
            android:id="@+id/btn_son"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:text="자녀"
            android:textColor="#0000ff"
            android:textSize="40sp" />
    </RadioGroup>

    <EditText
        android:id="@+id/edit_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="490dp"
        android:gravity="center"
        android:hint="별명을 입력해주세요."
        android:maxLength="10"
        android:singleLine="true"
        android:textSize="40sp" />

    <Button
        android:id="@+id/btnNickName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_nickname"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="10dp"
        android:text="전송"
        android:textSize="20dp" />

</RelativeLayout>