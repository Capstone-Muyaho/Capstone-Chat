<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/myinfo2"
    android:orientation="vertical"
    tools:context=".ParentMainActivity">

    <TextView
        android:id="@+id/menu"
        android:layout_width="350dp"
        android:layout_height="0dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="347dp"
        android:gravity="center_horizontal"
        android:text="메뉴"
        android:textSize="50sp"
        android:fontFamily="@font/gyeonggi_batang_bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_emergency_call"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.036" />

    <Button
        android:id="@+id/btn_profile"
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:layout_marginTop="200dp"
        android:backgroundTint="#97A884"
        android:fontFamily="@font/gyeonggi_title_medium"
        android:text="내 정보 보기"
        android:textColor="#E7C794"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/menu" />

    <Button
        android:id="@+id/btn_snaptalk"
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:backgroundTint="#97A884"
        android:text="스냅톡"
        android:textColor="#E7C794"
        android:textSize="30sp"
        android:fontFamily="@font/gyeonggi_title_medium"
        app:layout_constraintTop_toBottomOf="@+id/btn_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_emergency_call"
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:layout_marginBottom="90dp"
        android:backgroundTint="#97A884"
        android:text="긴급 전화"
        android:textColor="#E7C794"
        android:textSize="30sp"
        android:fontFamily="@font/gyeonggi_title_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_snaptalk" />

</androidx.constraintlayout.widget.ConstraintLayout>